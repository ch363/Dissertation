{
  "root": true,
  "extends": ["universe/native"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    {
      "files": ["app/**/*.{ts,tsx}", "app/**/**/*.tsx"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["@/lib/*", "@/internal/*"],
                "message": "UI routes must import from '@/modules/*' facades, not '@/lib/*' or '@/internal/*'."
              }
            ]
          }
        ]
      }
  },
  {
      "files": ["app/(dev)/**/*.{ts,tsx}"],
      "rules": {
        "no-restricted-imports": "off"
      }
    }
  ]
}
