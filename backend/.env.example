# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# Supabase Configuration
# Required: Your Supabase project URL
SUPABASE_URL="https://your-project.supabase.co"

# Required: JWT secret for verifying Supabase tokens
# You can find this in Supabase Dashboard > Settings > API > JWT Secret
# OR use SUPABASE_SERVICE_ROLE_KEY as fallback
SUPABASE_JWT_SECRET="your-jwt-secret-here"

# Optional: Supabase anon key (for client-side operations if needed)
SUPABASE_ANON_KEY="your-anon-key-here"

# Optional: Supabase service role key (for admin operations, fallback for JWT verification)
# WARNING: Never expose this to client-side code
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Server
PORT=3000

# Azure Speech (Pronunciation Assessment)
AZURE_SPEECH_KEY="YOUR_AZURE_SPEECH_KEY"
AZURE_SPEECH_REGION="uksouth"
AZURE_SPEECH_DEFAULT_LOCALE="it-IT"
